@page
@model ServiceHost.Pages.AccountModel
@inject _0_Framework.Application.IAuthHelper _authHelper
@{
    ViewData["Title"] = "ورود به حساب کاربری";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود به حساب کاربری</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود به حساب کاربری</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12">

                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                else
                                {
                                    <div class="alert alert-danger">لطفا اطلاعات خود را وارد نمائید</div>
                                }
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود به حساب کاربری</h4>
                                        <div class="row" style="flex-direction: column; align-items: center">
                                            <div class="col-md-6 col-6">
                                                <label>نام کاربری</label>
                                                <input type="text" name="username" placeholder="نام کاربری" style="margin-bottom: 45px;">
                                                @* <span asp-validation-for="username" class="error"></span>*@
                                            </div>
                                            <div class="col-6">
                                                <label>کلمه عبور</label>
                                                <input type="password" name="password" placeholder="کلمه عبور">
                                            </div>

                                            <div class="col-sm-6">
                                                <div class="check-box d-inline-block ml-0 ml-md-2">
                                                    <input type="checkbox" id="remember_me">
                                                    <label for="remember_me">
                                                        مرا به خاطر بسپار
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="flex-direction: column; align-items: center">
                                            <div class="col-md-6" style="margin-bottom: 15px">
                                                <button class="register-button" style="margin-right: 152px;">ورود</button>
                                            </div>
                                            <div class="col-sm-6">
                                                <a href="#" class="forget-pass-link" style="margin-right: 190px">فراموشی رمز عبور؟</a>

                                            </div>
                                            <div class="row" style="flex-direction: column; align-items: center">
                                                <b style="margin-top: 50px;">
                                                    اگر هنوز حساب کاربری ندارید ثبت نام کنید
                                                </b>
                                                <a class="goToRegister-button" asp-page-handler="GoToRegister">ثبت نام</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>